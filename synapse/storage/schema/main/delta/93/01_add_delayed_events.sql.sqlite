-- Remove `user_localpart` from the primary key of the `delayed_events` table.
-- SQLite doesn't support dropping constraints from an existing table, so it must
-- be recreated.

CREATE TABLE delayed_events_new (
    delay_id TEXT PRIMARY KEY,
    user_localpart TEXT NOT NULL,
    device_id TEXT,
    delay BIGINT NOT NULL,
    send_ts BIGINT NOT NULL,
    room_id TEXT NOT NULL,
    event_type TEXT NOT NULL,
    state_key TEXT,
    origin_server_ts BIGINT,
    content bytea NOT NULL,
    is_processed BOOLEAN NOT NULL DEFAULT FALSE
);

INSERT INTO delayed_events_new (delay_id, user_localpart, device_id, delay_id, send_ts, room_id, event_type, state_key, origin_server_ts, content, is_processed)
    SELECT delay_id, user_localpart, device_id, delay_id, send_ts, room_id, event_type, state_key, origin_server_ts, content, is_processed
    FROM delayed_events;

DROP TABLE delayed_events;

ALTER TABLE delayed_events_new RENAME TO delayed_events;

CREATE INDEX delayed_events_send_ts ON delayed_events (send_ts);
CREATE INDEX delayed_events_is_processed ON delayed_events (is_processed);
CREATE INDEX delayed_events_room_state_event_idx ON delayed_events (room_id, event_type, state_key) WHERE state_key IS NOT NULL;
